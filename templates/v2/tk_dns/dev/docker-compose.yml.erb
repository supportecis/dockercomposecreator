version: "2"
services:
  dnsdock:
    image: tonistiigi/dnsdock
    container_name: tk_dns
    hostname: tk_dns
    logging:
      driver: "none"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    ports:
      - 172.17.0.1:53:53/udp
      - 172.17.0.1:53:53/tcp
    command: -ttl=30 -environment="dev" -nameserver="192.168.101.1:53" -domain="<%= @clientname %>"
    network_mode: bridge
