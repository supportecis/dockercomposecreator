version: "2"
services:
  nginx:
    image: registry.teikhos.eu/nginx/tk-ubuntu-nginx:2016042101
    depends_on:
      - phpfpm    
    volumes_from:
      - phpfpm
    volumes:
      - /home/sites/<%= @fulldomain %>/conf/nginx:/etc/nginx
      - /home/sites/<%= @fulldomain %>/log/nginx:/var/log/nginx
    env_file: web.env 
    restart: always
    logging:
      driver: "syslog"
      options:
        syslog-tag: "<%= @fulldomain %>_web"      
    networks:
      proxy:
        aliases:
          - <%= @fulldomain %>.vhost
      default:     
  phpfpm:
    image: registry.teikhos.eu/fpm/tk-ubuntu-fpm:wily
    depends_on:
      - mariadb
      - postfix    
    volumes:
      - /home/sites/<%= @fulldomain %>/web:/var/www/html
      - /home/sites/<%= @fulldomain %>/conf/fpm:/etc/php5/fpm
      - /home/sites/<%= @fulldomain %>/log/php5-fpm:/var/log/php5-fpm
    links:
     - postfix:smtp
     - mariadb:sqldb
    env_file: phpfpm.env
    restart: always
    logging:
      driver: "syslog"
      options:
        syslog-tag: "<%= @fulldomain %>_fpm"      
  postfix:
    image: registry.teikhos.eu/mail/tk-postfix:2015120901
    volumes :
      - /home/sites/<%= @fulldomain %>/log/mail:/var/log/postfix
      - /home/sites/<%= @fulldomain %>/conf/mail:/config
    env_file: smtp.env
    restart: always
    logging:
      driver: "none"
  mariadb:
    image: mariadb:10
    volumes_from:
      - mariadbdata
    env_file: db.env
    restart: always
    logging:
      driver: "none"
    networks:
      default:
      phpmyadmin:
        aliases:
          - <%= @fulldomain %>.db
  mariadbdata:
    image: mariadb:10
    command: echo "Image DATA pour MariaDB, afin de permettre la migration"
    volumes:
      - /home/sites/<%= @fulldomain %>/db:/var/lib/mysql
    logging:
      driver: "none"
  mariadbbackup:
    image: registry.teikhos.eu/database/tk-alpine-sqlbackup:latest
    depends_on:
      - mariadb
      - postfix    
    links:
      - mariadb:hostdb
      - postfix:hostsmtp
    volumes: 
      - /home/sites/<%= @fulldomain %>/dbbackups:/backups
    env_file:
      - db.env
      - backup.env
    hostname: backup_<%= @fulldomain %>
    restart: always
    logging:
      driver: "none"
networks:
  proxy:
    external:
      name: tkapacheproxy_main
  phpmyadmin:
    external:
      name: tkpma_main
